import("//base/notification/distributed_notification_service/notification.gni")
import("//build/ohos.gni")
import("//build/test.gni")

module_output_path =
    "${component_name}/distributed_notification_service/unittest"

ohos_unittest("ans_notification_branch_test") {
  module_out_path = module_output_path
  include_dirs = [
    "${core_path}/include",
    "/${services_path}/ans/include/utils/",
    "../mock/",
  ]

  sources = [
    "../mock/mock_ans_manager_proxy.cpp",
    "ans_notification_branch_test.cpp",
  ]
  version_script = "../test.map"

  deps = [
    "${frameworks_module_ans_path}:ans_callback_proxy",
    "${frameworks_module_ans_path}:ans_innerkits",
  ]

  external_deps = [
    "ability_base:configuration",
    "ability_base:want",
    "ability_base:zuri",
    "ability_runtime:wantagent_innerkits",
    "bundle_framework:appexecfwk_base",
    "c_utils:utils",
    "ffrt:libffrt",
    "googletest:gmock_main",
    "hilog:libhilog",
    "image_framework:image_native",
    "ipc:ipc_single",
    "relational_store:native_rdb",
  ]
  if (build_variant == "root") {
    defines = [ "ANM_SUPPORT_DUMP" ]
  }

  subsystem_name = "${subsystem_name}"
  part_name = "${component_name}"
}

group("unittest") {
  testonly = true
  deps = []

  deps += [ ":ans_notification_branch_test" ]
}
