    "test/src/mock/mock_rdb_store.cpp",
    "test/src/i_rdb_event_handler_test.cpp",
    "test/src/init_default_table_handler_test.cpp",
    "test/src/live_view_migration_handler_test.cpp",
    "test/src/notification_rdb_hook_mgr_test.cpp",
    "test/src/notification_rdb_mgr_test.cpp",
    "test/src/notification_rdb_wrapper_test.cpp",
    "test/src/rdb_event_handler_manager_test.cpp",
    "test/src/rdb_store_callback_test.cpp",
  ]

  deps = [
    ":ans_base_rdb",
  ]

  external_deps = [
    "c_utils:utils",
    "ffrt:libffrt",
    "hilog:libhilog",
    "relational_store:native_rdb",
  ]

  subsystem_name = "${subsystem_name}"
  part_name = "${component_name}"
}