import("//base/notification/distributed_notification_service/notification.gni")
import("//build/ohos.gni")
import("//build/test.gni")

config("ans_base_rdb_config") {
  visibility = [ "./../../../*" ]
  include_dirs = [
    "${core_path}/common/include",
    "include",
    "include/rdb_event_handler",
    "include/rdb_store_wrapper",
  ]
}

config("ans_base_rdb_config_public") {
  visibility = [ "./../../../*" ]
  include_dirs = [
    "include/public",
  ]
}

is_build_source_set_ntf = true

if (is_build_source_set_ntf) {
  ohos_source_set("ans_base_rdb") {
    sanitize = {
      integer_overflow = true
      ubsan = true
      boundary_sanitize = true
      cfi = true
      cfi_cross_dso = true
      debug = false
    }
    branch_protector_ret = "pac_ret"

    sources = [
      "src/notification_rdb_constant.cpp",
      "src/notification_rdb_hook_mgr.cpp",
      "src/notification_rdb_mgr.cpp",
      "src/rdb_event_handler/i_rdb_event_handler.cpp",
      "src/rdb_event_handler/init_default_table_handler.cpp",
      "src/rdb_event_handler/live_view_migration_handler.cpp",
      "src/rdb_event_handler/rdb_event_handler_manager.cpp",
      "src/rdb_event_handler/rdb_store_callback.cpp",
      "src/rdb_store_wrapper/rdb_store_wrapper_delete.cpp",
      "src/rdb_store_wrapper/rdb_store_wrapper_insert.cpp",
      "src/rdb_store_wrapper/rdb_store_wrapper_query.cpp",
      "src/rdb_store_wrapper/rdb_store_wrapper.cpp"
    ]

    defines = []


    configs = [
      ":ans_base_rdb_config",
    ]

    public_configs = [
      ":ans_base_rdb_config_public"
    ]

    external_deps = [
      "c_utils:utils",
      "ffrt:libffrt",
      "hilog:libhilog",
      "relational_store:native_rdb",
    ]

    subsystem_name = "${subsystem_name}"
    part_name = "${component_name}"
  }
} else {
  ohos_shared_library("ans_base_rdb") {
    sanitize = {
      integer_overflow = true
      ubsan = true
      boundary_sanitize = true
      cfi = true
      cfi_cross_dso = true
      debug = false
    }
    branch_protector_ret = "pac_ret"

    sources = [
      "src/notification_rdb_constant.cpp",
      "src/notification_rdb_hook_mgr.cpp",
      "src/notification_rdb_mgr.cpp",
      "src/rdb_event_handler/i_rdb_event_handler.cpp",
      "src/rdb_event_handler/init_default_table_handler.cpp",
      "src/rdb_event_handler/live_view_migration_handler.cpp",
      "src/rdb_event_handler/rdb_event_handler_manager.cpp",
      "src/rdb_event_handler/rdb_store_callback.cpp",
      "src/rdb_store_wrapper/rdb_store_wrapper_delete.cpp",
      "src/rdb_store_wrapper/rdb_store_wrapper_insert.cpp",
      "src/rdb_store_wrapper/rdb_store_wrapper_query.cpp",
      "src/rdb_store_wrapper/rdb_store_wrapper.cpp"
    ]

    defines = []

    configs = [
      ":ans_base_rdb_config",
    ]

    public_configs = [
      ":ans_base_rdb_config_public"
    ]

    external_deps = [
      "c_utils:utils",
      "ffrt:libffrt",
      "hilog:libhilog",
      "relational_store:native_rdb",
    ]

    subsystem_name = "${subsystem_name}"
    part_name = "${component_name}"
  }
}

